<section class="max-w-xl mx-auto py-12 md:py-16 px-4 md:px-16 text-pillowtalk-500 text-center">
  <article x-data="{ count: 0, observer: null }" x-init="
    observer = new IntersectionObserver(([entry]) => {
      if (entry.isIntersecting) {
        count = 0;
        let i = setInterval(() => {
          if (count < 96) count++;
          else clearInterval(i);
        }, 1500 / 96);
      }
    }, { threshold: 0.6 });
    observer.observe($el);
  " class="text-center">
    <h2 class="font-montserrat text-display font-extrabold tracking-tighter pb-4 text-greenflag-500 animationinviewfade">
      <span x-text="count + '%'">0%</span>
    </h2>
  </article>
  <h3 class="font-montserrat text-heading3 font-bold tracking-tighter pb-2 animationinviewfade">of Doubble Events are officially “a vibe”</h3>
  <p class="animationinviewfade">(okay, we made that up. but see if you can prove us wrong)</p>
</section>

<script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js" defer></script>

