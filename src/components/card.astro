---
const { date = "", eventname = "", eventinfo = "", cardimage = "", alttext = "" } = Astro.props;
import { Image } from "astro:assets";
import calendar from "../assets/images/calendar.svg";
---

<article id="eventscard" class="rounded-3xl bg-pillowtalk-500 overflow-clip relative group">
  <div class="mb-10 md:mb-0 transition-transform duration-300 group-hover:scale-105">
    <img src={cardimage} alt={alttext} class="object-cover aspect-[3/2] w-full" />
    <div class="px-6 pt-6 pb-8 text-afterhours-500">
      <div class="flex gap-2 items-center"><Image src={calendar} alt="a plus icon" class="w-[25px] h-auto" /><p class="text-afterhours-400 font-medium">{date}</p></div>
      <h3 class="pb-2 pt-1 text-body font-bold font-montserrat">{eventname}</h3>
      <p>{eventinfo}</p>
    </div>
  </div>
  <div class="absolute inset-0 bg-afterhours-500/90 backdrop-blur-sm opacity-0 group-hover:opacity-90 transition duration-300 z-20"></div>
  <a href="https://apps.apple.com/dk/app/doubble-dating-friends-chat/id1572234875" target="_blank" class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition duration-300 z-30">
    <span class="text-greenflag-500 text-heading4 md:text-body font-bold text-center px-4 py-2 rounded-lg">join event 🗓️</span>
  </a>
</article>
