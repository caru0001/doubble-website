<script>
  /* Importing from Motion One library */
  import { animate, inView, scroll } from "motion";

  /* Inview animation from right + return */
  inView(".textanimationright", (element) => {
    animate(element, { x: [100, 0], opacity: [0, 1] }, { duration: 1.5 });
    return () => {
      animate(element, { x: [0], opacity: [0] });
    };
  });

  /* Inview animation from left + return */
  inView(".textanimationleft", (element) => {
    animate(element, { x: [-100, 0], opacity: [0, 1] }, { duration: 1.5 });
    return () => {
      animate(element, { x: [0], opacity: [0] });
    };
  });

