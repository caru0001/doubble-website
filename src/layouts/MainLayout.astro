---
import Navbar from "../components/navbar.astro";
import Footer from "../components/myfooter.astro";
import "../styles/tailwind.css";
import "animate.css";
const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{Astro.props.title}</title>
  </head>
  <body class="font-cera bg-afterhours-500">
    <header>
      <Navbar />
    </header>

    <main class="scroll-smooth text-pretty">
      <slot />
    </main>

    <footer>
      <Footer />
    </footer>
  </body>
</html>

<script>
  import { animate, inView } from "motion";

  // Entrance animation for whole website
  animate("body", { opacity: [0, 1] }, { duration: 1 });

  /* Animation for text fade in*/
  inView(".animationinviewfade", (element) => {
    animate(element, { opacity: [0, 1] }, { duration: 1.5 });

    return () => {
      animate(element, { opacity: [1, 0] }, { duration: 1.5 });
    };
  });
</script>
