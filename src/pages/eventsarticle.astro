---
import MainLayout from "../layouts/MainLayout.astro";
import Eventscards from "../components/eventscards.astro";
import Textboxescontainer from "../components/textboxescontainer.astro";
import Parallaxgraphics from "../components/parallaxgraphicscontainer.astro";
import Number from "../components/number.astro";
import Quote from "../components/quote.astro";
import Eventsbanner from "../components/eventsbanner.astro";
import Relatedarticles from "../components/relatedarticles.astro";
---

<MainLayout title="doubble events article">
  <section id="eventshero" class="text-pillowtalk-500 py-12 md:py-16 px-4 md:px-16 h-screen max-w-7xl mx-auto">
    <h1 class="font-montserrat text-display font-extrabold tracking-tighter pb-16 animationinviewfade">finally, <span class="italic text-firstkiss-500 font-light">Doubble Events</span> are here.</h1>
    <p class="max-w-3xl pb-6 text-3xl animationinviewfade">say <strong>goodbye</strong> to flaky group chats and “what’s the plan?” stress and <strong>hello</strong> to Doubble Events - where real plans actually happen.</p>
    <p class="max-w-3xl text-3xl animationinviewfade">just <strong>scroll</strong>, <strong>tap</strong>, and <strong>show up</strong>.</p>
  </section>
  <Eventscards />
  <Textboxescontainer />
  <Parallaxgraphics />
  <Number />
  <Textboxescontainer />
  <Quote />
  <Eventsbanner />
  <Relatedarticles />
</MainLayout>
